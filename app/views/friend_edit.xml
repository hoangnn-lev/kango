<Alloy>
	<Window>
		<AlertDialog id="dialog"  title="お知らせ" class="dialog" cancel="1">
			<View class="mainPopup">
				<View left="10dp" right="10dp" layout="vertical" bottom="10dp" top="10dp">
					<Label zIndex="1" text="メンバー名(最大8文字) "/>
					<TextField zIndex="2" class="popupField" hintText="アサコ先輩"/>
					<Label zIndex="1"  class="error" text="※文字数が多すぎます"/>
				</View>
			</View>
			<ButtonNames>
				<ButtonName>
					キャンセル
				</ButtonName>
				<ButtonName>
					保存する
				</ButtonName>
			</ButtonNames>
		</AlertDialog>
		<View backgroundColor="#ff3974" top="0" height="40dp">
			<Label left="10dp" color="#fff">
				タップで名前を変更できます
			</Label>
		</View>
		<TableView onClick="edit" separatorColor="#fff" id="friend"/>
		<Require type="view" src="tab_menu" id="tabMenu">
		</Require>
	</Window>
</Alloy>