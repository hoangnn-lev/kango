<Alloy>
	<Window exitOnClose="true">
		<Require type="view" src="tab_menu" id="tabMenu"/>
		<View id="main" layout="vertical">
			<View id="calendarTitle">
				<ImageView image="/icons/prev.png" class="calendarButton"  id="prevMonth" left="0"/>
				<View id="dateInfo">
					<Label  id="year"/>
					<Label  id="month"/>
					<Label  id="monthName"/>
				</View>
				<ImageView  image="/icons/next.png"  class="calendarButton"  id="nextMonth" right="0"/>
			</View>
			<View id="days"/>
			<View id="calendar" onClick="clickCalendar" />
			<ScrollView id="scheduleInfo">
				<View class="scheduleTitle" id="scheduleTitle">
					<Label id="scheduleDateInfo"/>
					<Label id="dayName"/>
					<View id="shiftLabel"/>
					<Button right="10dp" width="Ti.UI.SIZE" title="＋予定を追加" class="editScheduleButton" onClick="addEvent"/>
				</View>
				<View id="blockFriend">
					<View height="Ti.UI.SIZE" top="10dp">
						<ImageView image="/icons/ttlMember.png" touchEnabled="false" height="15dp" left="10dp" />
						<ImageView image="/icons/btn_Open.png" id="openAllFriend" onClick="openAllFriend" type="open" />
					</View>
					<View id="friend"/>
					<View id="groupAllFriend">
						<Label left="5dp" right="10dp" class="line"/>
						<View id="allFriend"/>
						<Button title="メンバー設定" id="editFriend" />
					</View>
				</View>
				<View id="scheduleList" height="Ti.UI.SIZE"/>
			</ScrollView>
		</View>
	</Window>
</Alloy>