<Alloy>
	<Window>
		<Require type="view" src="tab_menu" id="tabMenu"/>
		<ScrollView id="main">
			<View id="title">
				<Label left="0" text="勤務メンバー設定"/>
				<Button id="edit" type="none" title="編集"/>
			</View>
			<TableView separatorColor="#eeeeee" id="friendList" />
			<View id="viewAddFriend">
				<TextField maxLength="8" id="name" hintText="メンバー名　最大8文字まで"/>
				<Button id="addFriend" title="＋メンバーを追加"/>
			</View>
		</ScrollView>
		<View id="groupButton">
			<Button title="チェック取り消し" left="10dp" id="uncheck" class="button"/>
			<Button title="削除する"
			backgroundFocusedColor = '#c0ad91'
			backgroundColor = '#cfba9c'
			backgroundSelectedColor = '#c0ad91'
			 right="10dp" id="deleteFriend" class="button"/>
		</View>
	</Window>
</Alloy>