<Alloy>
	<Window>
		<Require type="view" src="tab_menu" id="tabMenu"/>
		<View id="main">
			<ScrollView id="content" layout="vertical">
				<View height="60dp" width="120dp">
					<Label id="date"/>
					<Label id="dayName"/>
				</View>
				<TextField maxLength="30" id="title" hintText="タイトル"/>
				<TextField maxLength="5" id="startTime" hintText="開始時間"/>
				<TextField maxLength="5" id="endTime" hintText="終了時間"/>
				<TextArea maxLength="120" height="80dp" id="memo" hintText="メモ"/>
				<View id="wicon">
					<View id="listIcon"/>
					<ScrollView scrollType="horizontal" id="buttonTabs"/>
				</View>
				<View id="groupButton">
					<Button onClick="saveSchedule" class="button" width="Ti.UI.FILL"
					backgroundColor = '#f3acbd'
					backgroundFocusedColor = '#e6a3b3'
					backgroundSelectedColor = '#e6a3b3'
					title="保存してカレンダーに戻る"/>
					<Button onClick="saveSchedule" type="next" width="Ti.UI.FILL" class="button"
					backgroundColor = '#cfba9c'
					backgroundFocusedColor = '#c0ad91'
					backgroundSelectedColor = '#c0ad91'
					title="保存して別の予定を入力"/>

				</View>
			</ScrollView>
		</View>
	</Window>
</Alloy>