<Alloy>
	<Window>
		<View backgroundColor="#ff3974" top="0" height="40dp">
			<Label left="10dp" text="シフトの編集" color="#fff"/>
		</View>
		<View id="content">
			
			<Button id="shiftName" title="日勤"/>
			
			<Label class="smallText" text="シフト名(最大4文字)"/>
			<TextField id="shiftAlias"/>
			<Label id="error" class="error" text="※文字数が多すぎます" top="-33dp" left="130dp" />
			
			
			<Label class="smallText" text="時間(任意)"/>
			<View class="timeBlock">
				<TextField id="timeStart"/>
				<Label class="smallText" text="から"/>
				<TextField id="timeEnd"/>
				
			</View>
		</View>
		<Require type="view" src="tab_menu" id="tabMenu"/>
	</Window>
</Alloy>