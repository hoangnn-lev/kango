<Alloy>
	<Window>
		<Require type="view" src="tab_menu" id="tabMenu"/>
		<View id="main">
			<View top="0" height="40dp">
				<Label left="10dp" text="シフトの編集"/>
			</View>
			<View id="content">
				<Label id="shiftName" text="日勤"/>
				<Label class="smallText" text="シフト名(最大2文字)"/>
				<TextField maxLength="2" hintText="日勤" id="shiftAlias"/>
				<Label id="errorLabel" class="error" bottom="10dp" text="※文字数が多すぎます" top="-33dp" left="130dp" />
				<Label class="smallText" text="時間(任意)"/>
				<View class="timeBlock">
					<TextField id="timeStart"/>
					<Label class="smallText" touchEnabled="false" width="Ti.UI.SIZE" text="から"/>
					<TextField id="timeEnd"/>
				</View>
				<Label id="errorTime"  class="error" text="※シフト終了時間が入力されていません" left="0"/>
				<Label class="smallText" text="スタンプ"/>
				<View id="groupShiftColor"/>
				<View id="groupButton">
					<Button id="saveShift" class="button" width="Ti.UI.FILL"
					backgroundColor = '#f3acbd'
					backgroundFocusedColor = '#e6a3b3'
					backgroundSelectedColor = '#e6a3b3'
					title="キャンセル"/>
					<Button onClick="shift_setting"  width="Ti.UI.FILL" class="button"
					backgroundColor = '#cfba9c'
					backgroundFocusedColor = '#c0ad91'
					backgroundSelectedColor = '#c0ad91'
					title="保存する"/>
				</View>

			</View>
		</View>
	</Window>
</Alloy>