<Alloy>
	<Window>
		<View id="main">
			<View id="title">
				<Label width="Ti.UI.SIZE" color="#fff" text="シフト設定詳細"/>
			</View>
			<View id="content">
				<View top="10dp" bottom="10dp">
					<Label id="shiftName"/>
					<TextField maxLength="2" hintText="日勤" id="shiftAlias"/>
					<Label left="230dp" class="smallText" text="2文字以内"/>
				</View>
				<View class="timeSet">
					<Label type="start" onClick="timeSet" id="timeStart"/>
				</View>
				<View class="timeSet">
					<Label type="end"  onClick="timeSet"  id="timeEnd"/>
				</View>
				<Label class="smallText" text="スタンプ"/>
				<View id="groupShiftColor"/>
				<View id="groupButton">
					<Button id="saveShift" class="button" width="Ti.UI.FILL"
					backgroundColor = '#f3acbd'
					backgroundFocusedColor = '#e6a3b3'
					backgroundSelectedColor = '#e6a3b3'
					title="キャンセル"/>
					<Button onClick="shift_setting"  width="Ti.UI.FILL" class="button"
					backgroundColor = '#cfba9c'
					backgroundFocusedColor = '#c0ad91'
					backgroundSelectedColor = '#c0ad91'
					title="保存する"/>
				</View>

			</View>
		</View>
	</Window>
</Alloy>