<Alloy>
	<Window>
		<View id="main">
			<View id="title">
				<Label width="Ti.UI.SIZE" color="#fff" text="その他"/>
			</View>
			<View id="content">
				<Button class="item" onClick="shift_setting"  title="シフトの設定" />
				<Button class="item"  onClick="edit_members" title="勤務メンバーの設定"/>
				<View class="item">
					<Label class="sTitle" text="勤務メンバーを表示する"/>
					<Button class="off" onClick="showMember" id="showMember"  title="OFF" />
				</View>
				<View class="item">
					<Label class="sTitle"  text="カレンダーを月曜始まりにする"/>
					<Button id="monday_set" onClick="changeDayOffset" class="off" title="OFF" />
				</View>
				<Button class="item" id="allHospital" title="全国の病院情報をみる"/>
				<Button class="item" onClick="guideUseCalendar" title="カレンダーの使い方"/>
				<Button class="item" title="アプリのご感想・ご要望"/>
				<Button class="item" id="report" title="不具合やエラーを報告する"/>
				<Button class="item" id="about" title="看護のシフト帳（仮）について"/>
			</View>
		</View>
	</Window>
</Alloy>
