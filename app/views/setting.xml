<Alloy>
	<Window>
		<Require type="view" src="tab_menu" id="tabMenu"/>
		<View id="main">
			<View id="content">
				<ScrollView layout="vertical" height="Ti.UI.SIZE" top="0">
					<View class="customeTableViewRow" onClick="shift_setting">
						<Label left="10dp"  text="シフトの設定"/>
						<ImageView image="/icons/bkgIconArrow.png" class="rightIcon"/>
					</View>
					<Label class="line"/>
					<View class="customeTableViewRow" onClick="edit_members">
						<Label left="10dp"  text="勤務メンバーの設定"/>
						<ImageView image="/icons/bkgIconArrow.png" class="rightIcon"/>
					</View>
					<Label class="line"/>
					<View class="customeTableViewRow">
						<Label left="10dp"  text="勤務メンバーを表示する"/>
						<Button class="off" onClick="showMember" id="showMember"  title="OFF" />
					</View>
					<Label class="line"/>
					<View class="customeTableViewRow">
						<Label left="10dp"  text="カレンダーを月曜始まりにする"/>
						<Button id="monday_set" onClick="changeDayOffset" class="off" title="OFF" />
					</View>
					<View class="customeTableViewRow"  touchEnabled="false" backgroundColor="#f5f1e9" height="70dp">
						<View class="customeRowView" id="allHospital">
							<Label left="10dp"  text="全国の病院情報をみる"/>
							<ImageView image="/icons/bkgIconArrow.png" class="rightIcon"/>
						</View>
					</View>
					<View class="customeTableViewRow" onClick="guideUseCalendar" >
						<Label left="10dp"  text="カレンダーの使い方"/>
						<ImageView image="/icons/bkgIconArrow.png" class="rightIcon"/>
					</View>
					<Label class="line"/>
					<View class="customeTableViewRow" id="chPlay">
						<Label left="10dp"  text="アプリのご感想・ご要望"/>
						<ImageView image="/icons/bkgIconArrow.png" class="rightIcon"/>
					</View>
					<Label class="line"/>
					<View class="customeTableViewRow" id="report">
						<Label left="10dp"  text="不具合やエラーのお問い合わせ"/>
						<ImageView image="/icons/bkgIconArrow.png" class="rightIcon"/>
					</View>
					<Label class="line"/>
					<View class="customeTableViewRow"  id="about">
						<Label left="10dp"  text="ペリカレ！ついて"/>
						<ImageView image="/icons/bkgIconArrow.png" class="rightIcon"/>
					</View>

				</ScrollView>
			</View>
		</View>
	</Window>
</Alloy>
