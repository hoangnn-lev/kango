<Alloy>
	<Window exitOnClose="true">
		<Require type="view" src="tab_menu" id="tabMenu"/>
		<View id="main" layout="vertical">
			<View id="calendarTitle">
				<Button backgroundImage="/icons/prev.png" backgroundSelectedImage="/icons/prev_selected.png" class="calendarButton"  id="prevMonth" left="0"/>
				<View id="dateInfo">
					<Label id="year"/>
					<Label id="month"/>
					<Label id="monthName"/>
				</View>
				<Button backgroundImage="/icons/next.png" backgroundSelectedImage="/icons/next_selected.png" class="calendarButton"  id="nextMonth" right="0"/>
			</View>
			<View id="days"/>
			<View id="calendar" onClick="clickCalendar" />
			<ScrollView id="scheduleInfo">
				<View class="scheduleTitle" id="scheduleTitle">
					<Label id="shiftDateInfo"/>
					<Label id="dayName"/>
					<View id="shiftLabel"/>
				</View>
				<Label class="line2"/>
				<View backgroundColor="#fff" height="Ti.UI.SIZE" layout="vertical">
					<View id="shiftList"/>
					<View class="buttonShiftSetting">
						<Button title="シフト設定" id="shiftSetting"/>
					</View>
				</View>
			</ScrollView>
		</View>
	</Window>
</Alloy>